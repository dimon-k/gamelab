<div class="row">
  <div class="col-md-3">

  </div>
  <div class="col-md-6">
    <% if current_user? %>
      <% flash.each do |message_type, message| %>
        <div class="text-success <%= message_type %>"><%= message %></div>
      <% end %>
      <br />
      <table class="table table-condensed">
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
        </tr>
          <tr>
            <td><%=@user.first_name%></td>
            <td><%=@user.last_name%></td>
            <td><%=@user.email%></td>
          </tr>
      </table>
    <% else %>
      <h4 class="text-danger">You are not allowed to see this page!</h4>
    <% end %>
    <p><%= link_to "HOME", root_path, class: "btn btn-default" %></p>
  </div>
  <div class="col-md-3">

  </div>
</div>
